<%- include('../partials/header') %>

<div class="dashboard-container">
  <%- include('../partials/admin-nav') %>
  
  <div class="main-content">
    <div class="content-header">
      <h1>Edit Job Posting</h1>
    </div>

    <form action="/admin/jobs/<%= job._id %>?_method=PUT" method="POST" class="card">
      <div class="form-grid">
        <div class="form-group">
          <label for="job_title">Job Title</label>
          <input type="text" id="job_title" name="job_title" value="<%= job.job_title %>" required>
        </div>
        <div class="form-group">
          <label for="company_name">Company Name</label>
          <input type="text" id="company_name" name="company_name" value="<%= job.company_name %>" required>
        </div>
        <div class="form-group">
          <label for="location">Location (e.g., Remote, On-site)</label>
          <input type="text" id="location" name="location" value="<%= job.location %>">
        </div>
        <div class="form-group">
          <label for="location_details">Location Details (e.g., Bengaluru, India)</label>
          <input type="text" id="location_details" name="location_details" value="<%= job.location_details %>">
        </div>
        <div class="form-group">
          <label for="compensation">Compensation (e.g., 5 - 18 LPA)</label>
          <input type="text" id="compensation" name="compensation" value="<%= job.compensation %>">
        </div>
        <div class="form-group">
          <label for="link">Application Link</label>
          <input type="text" id="link" name="link" value="<%= job.link %>">
        </div>
        <div class="form-group full-width">
          <label for="summary">Summary</label>
          <textarea id="summary" name="summary" rows="6"><%= job.summary %></textarea>
        </div>
        <div class="form-group full-width">
          <label for="key_skills_mentioned">Key Skills (comma-separated)</label>
          <input type="text" id="key_skills_mentioned" name="key_skills_mentioned" value="<%= job.key_skills_mentioned.join(', ') %>">
        </div>
        <div class="form-group full-width">
          <label for="next_step">Next Step</label>
          <input type="text" id="next_step" name="next_step" value="<%= job.next_step %>">
        </div>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/admin/jobs" class="btn btn-secondary">Cancel</a>
      </div>
    </form>

  </div>
</div>

<%- include('../partials/footer') %>
