<%- include('../partials/header') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="dashboard-container">
  <%- include('../partials/admin-nav') %>
  
  <div class="main-content">
    <div class="content-header">
      <h1>Admin Dashboard</h1>
    </div>

    <div class="stats-grid">
      <div class="card stat-card">
        <h4>Total Placed</h4>
        <div class="stat-value"><%= stats.totalPlaced %></div>
      </div>
      <div class="card stat-card">
        <h4>Avg. Package</h4>
        <div class="stat-value"><%= stats.averagePackage %> LPA</div>
      </div>
      <div class="card stat-card">
        <h4>Highest Package</h4>
        <div class="stat-value"><%= stats.highestPackage %> LPA</div>
      </div>
      <div class="card stat-card">
        <h4>Total Applications</h4>
        <div class="stat-value"><%= stats.totalApplications %></div>
      </div>
    </div>

    <div class="card" style="height: 400px; margin-top: 30px;">
      <canvas id="placementChart"></canvas>
      <input type="hidden" id="chartData" value="<%= packageData %>">
    </div>

    <div class="card" style="margin-top: 30px;">
      <h3>Recently Placed Students</h3>
      <table class="data-table">
        <thead>
          <tr>
            <th>Student Name</th>
            <th>Branch</th>
            <th>Company</th>
            <th>Role</th>
            <th>Package</th>
          </tr>
        </thead>
        <tbody>
          <% if (placedStudents.length === 0) { %>
            <tr><td colspan="5" style="text-align: center;">No students placed yet.</td></tr>
          <% } %>
          <% placedStudents.forEach(app => { %>
            <tr>
              <td><%= app.profileSnapshot.fullName %></td>
              <td><%= app.profileSnapshot.branch %></td>
              <td><%= app.job.company %></td>
              <td><%= app.job.title %></td>
              <td><%= app.job.ctc %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<%- include('../partials/footer') %>
