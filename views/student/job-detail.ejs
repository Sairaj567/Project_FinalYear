<%- include('../partials/header') %>

<div class="dashboard-container">
  <%- include('../partials/student-nav') %>
  
  <div class="main-content">
    <div class="card">
      <div class="job-tags" style="margin-bottom: 20px;">
        <span class="job-tag role-type"><%= job.salary %></span>
        <span class="job-tag"><%= job.location %></span>
      </div>

      <h1><%= job.title %></h1>
      <h3 class="company" style="color: var(--text-muted);"><%= job.company %></h3>

      <div class="job-description" style="margin: 30px 0; white-space: pre-wrap;"><%= job.description %></div>

      <% if (job.requirements && job.requirements.length > 0) { %>
        <h4>Requirements</h4>
        <ul style="margin-left: 20px;">
          <% job.requirements.forEach(req => { %>
            <li><%= req %></li>
          <% }) %>
        </ul>
      <% } %>
      
      <% if (job.skills && job.skills.length > 0) { %>
        <h4 style="margin-top: 20px;">Skills</h4>
        <div class="job-tags">
          <% job.skills.forEach(skill => { %>
            <span class="job-tag"><%= skill %></span>
          <% }) %>
        </div>
      <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
