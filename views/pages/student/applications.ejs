<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/applications.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="student-layout">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-graduation-cap"></i>
                    <span>PlacementPortal</span>
                </div>
            </div>
            
            <nav class="sidebar-nav">
                <a href="/student/dashboard" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/student/profile" class="nav-item">
                    <i class="fas fa-user"></i>
                    <span>Profile</span>
                </a>
                <a href="/student/jobs" class="nav-item">
                    <i class="fas fa-briefcase"></i>
                    <span>Job Listings</span>
                </a>
                <a href="/student/applications" class="nav-item active">
                    <i class="fas fa-file-alt"></i>
                    <span>My Applications</span>
                </a>
                <a href="/student/resume" class="nav-item">
                    <i class="fas fa-file-pdf"></i>
                    <span>My Resume</span>
                </a>
                <a href="/auth/logout" class="nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <header class="content-header">
                <div class="header-left">
                    <h1>My Applications</h1>
                    <p>Track your job applications and status</p>
                </div>
                <div class="header-right">
                    <div class="user-info">
                        <div class="user-avatar">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <span class="user-name"><%= user.name %></span>
                    </div>
                </div>
            </header>

            <div class="applications-content">
                <!-- Application Stats -->
                <div class="application-stats">
                    <div class="stat-card">
                        <div class="stat-number"><%= applications ? applications.length : 0 %></div>
                        <div class="stat-label">Total Applications</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number"><%= applications ? applications.filter(app => ['applied', 'under_review', 'shortlisted'].includes(app.status)).length : 0 %></div>
                        <div class="stat-label">Pending</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number"><%= applications ? applications.filter(app => app.status === 'interview').length : 0 %></div>
                        <div class="stat-label">Interviews</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-number"><%= applications ? applications.filter(app => app.status === 'accepted').length : 0 %></div>
                        <div class="stat-label">Accepted</div>
                    </div>
                </div>

                <!-- Applications List -->
                <!-- Applications List -->
                <div class="applications-list-container">
                    <% if (applications && applications.length > 0) { %>
                        <% applications.forEach(application => { %>
                            <div class="application-card">
                                <div class="application-header">
                                    <div class="company-info">
                                        <div class="company-logo">
                                            <i class="fas fa-building"></i>
                                        </div>
                                        <div class="job-details">
                                            <h3><%= application.job.title %></h3>
                                            <p class="company-name"><%= application.job.company %></p>
                                            <div class="job-meta">
                                                <span><i class="fas fa-map-marker-alt"></i> <%= application.job.location %></span>
                                                <span><i class="fas fa-money-bill-wave"></i> <%= application.job.salary %></span>
                                                <span><i class="fas fa-briefcase"></i> <%= application.job.jobType %></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="application-status">
                                        <span class="status status-<%= application.status.replace('_', '-') %>">
                                            <%= application.status.replace('_', ' ').toUpperCase() %>
                                        </span>
                                        <div class="application-date">
                                            Applied: <%= application.appliedDate.toLocaleDateString() %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="application-actions">
                                    <a href="/student/jobs/<%= application.job._id %>" class="btn-secondary">
                                        <i class="fas fa-eye"></i> View Job
                                    </a>
                                    
                                    <!-- DELETE BUTTON - Only show for certain statuses -->
                                    <% if (['applied', 'under_review', 'shortlisted'].includes(application.status)) { %>
                                        <button class="btn-danger delete-application-btn" 
                                                data-application-id="<%= application._id %>"
                                                onclick="deleteApplication('<%= application._id %>')">
                                            <i class="fas fa-trash"></i> Delete Application
                                        </button>
                                    <% } %>
                                    
                                    <% if (application.status === 'interview') { %>
                                        <button class="btn-primary schedule-btn">
                                            <i class="fas fa-calendar-alt"></i> View Interview Details
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="no-applications">
                            <i class="fas fa-file-alt fa-3x"></i>
                            <h3>No Applications Yet</h3>
                            <p>You haven't applied to any jobs. Start browsing opportunities now!</p>
                            <a href="/student/jobs" class="btn-primary">Browse Jobs</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>
    </div>

    <script src="/js/applications.js"></script>
</body>
</html>