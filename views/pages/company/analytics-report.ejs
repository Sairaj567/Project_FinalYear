<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body { font-family: Arial, sans-serif; margin: 40px; }
        .header { text-align: center; border-bottom: 2px solid #333; padding-bottom: 20px; margin-bottom: 30px; }
        .section { margin-bottom: 30px; }
        .section h2 { color: #7E57C2; border-bottom: 1px solid #ddd; padding-bottom: 10px; }
        .stats-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin-bottom: 20px; }
        .stat-card { background: #f8f9fa; padding: 15px; border-radius: 8px; text-align: center; }
        table { width: 100%; border-collapse: collapse; margin: 20px 0; }
        th, td { border: 1px solid #ddd; padding: 12px; text-align: left; }
        th { background-color: #7E57C2; color: white; }
        .footer { margin-top: 50px; text-align: center; color: #666; font-size: 12px; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Analytics Report</h1>
        <p>Company: <%= companyName %></p>
        <p>Generated on: <%= generatedDate %></p>
    </div>

    <div class="section">
        <h2>Overview</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <h3><%= analytics.overview.totalJobs %></h3>
                <p>Total Jobs</p>
            </div>
            <div class="stat-card">
                <h3><%= analytics.overview.totalApplications %></h3>
                <p>Total Applications</p>
            </div>
            <div class="stat-card">
                <h3><%= analytics.overview.activeJobs %></h3>
                <p>Active Jobs</p>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>Application Status Distribution</h2>
        <table>
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Count</th>
                    <th>Percentage</th>
                </tr>
            </thead>
            <tbody>
                <% analytics.applicationsByStatus.forEach(status => { %>
                <tr>
                    <td><%= status._id.toUpperCase().replace('_', ' ') %></td>
                    <td><%= status.count %></td>
                    <td><%= ((status.count / analytics.overview.totalApplications) * 100).toFixed(1) %>%</td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="section">
        <h2>Top Performing Jobs</h2>
        <table>
            <thead>
                <tr>
                    <th>Job Title</th>
                    <th>Applications</th>
                    <th>Location</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                <% analytics.popularJobsWithDetails.forEach(job => { %>
                <tr>
                    <td><%= job.title %></td>
                    <td><%= job.applications %></td>
                    <td><%= job.location || 'N/A' %></td>
                    <td><%= job.jobType || 'N/A' %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>Generated by Placement Portal Analytics</p>
    </div>

    <script>
        // Auto-print option
        window.onload = function() {
            // Uncomment the line below to auto-print the report
            // window.print();
        };
    </script>
</body>
</html>