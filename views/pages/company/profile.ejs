<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .demo-banner {
            background: linear-gradient(135deg, #FF6B6B, #FF8E53);
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 10px;
            margin: 1rem 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.9rem;
            max-width: 500px;
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
        }
        
        .profile-form {
            background: var(--white);
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            border: 1px solid rgba(139, 95, 191, 0.1);
        }
        
        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }
        
        .form-group {
            margin-bottom: 1.75rem;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: var(--text-dark);
            font-size: 0.95rem;
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 1rem 1.25rem;
            border: 2px solid #E2E8F0;
            border-radius: 12px;
            font-family: 'Poppins', sans-serif;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background: #F8FAFC;
        }
        
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary-purple);
            background: white;
            box-shadow: 0 0 0 3px rgba(139, 95, 191, 0.1);
        }
        
        .form-group textarea {
            resize: vertical;
            min-height: 120px;
            line-height: 1.6;
        }
        
        .full-width {
            grid-column: 1 / -1;
        }
        
        .form-actions {
            display: flex;
            gap: 1.25rem;
            justify-content: flex-end;
            margin-top: 2.5rem;
            padding-top: 2rem;
            border-top: 1px solid #E2E8F0;
        }
        
        /* Enhanced Button Styles */
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-purple), #9C77D4);
            color: white;
            padding: 1rem 2rem;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            box-shadow: 0 4px 15px rgba(139, 95, 191, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(139, 95, 191, 0.4);
            background: linear-gradient(135deg, #9C77D4, var(--primary-purple));
        }
        
        .btn-primary:active {
            transform: translateY(0);
        }
        
        .btn-primary:disabled {
            background: #CBD5E0;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        .btn-secondary {
            background: white;
            color: var(--primary-purple);
            padding: 1rem 2rem;
            border: 2px solid var(--primary-purple);
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .btn-secondary:hover {
            background: var(--primary-purple);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(139, 95, 191, 0.3);
        }
        
        /* Logo Upload Section */
        .logo-upload-section {
            grid-column: 1 / -1;
            background: #F8FAFC;
            padding: 2rem;
            border-radius: 15px;
            border: 2px dashed #E2E8F0;
            text-align: center;
        }
        
        .company-logo-preview {
            width: 150px;
            height: 150px;
            border-radius: 20px;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            border: 3px solid #E2E8F0;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .company-logo-preview:hover {
            border-color: var(--primary-purple);
        }
        
        .company-logo-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }
        
        .company-logo-preview i {
            font-size: 3.5rem;
            color: #CBD5E0;
        }
        
        .logo-upload-btn {
            background: white;
            color: var(--primary-purple);
            padding: 0.75rem 1.5rem;
            border: 2px solid var(--primary-purple);
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .logo-upload-btn:hover {
            background: var(--primary-purple);
            color: white;
            transform: translateY(-2px);
        }
        
        /* Notification Styles */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            background: white;
            padding: 1.25rem 1.5rem;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            border-left: 4px solid;
            z-index: 10000;
            display: flex;
            align-items: center;
            gap: 1rem;
            max-width: 400px;
            animation: slideInRight 0.3s ease;
        }
        
        .notification-success {
            border-left-color: #10B981;
        }
        
        .notification-error {
            border-left-color: #EF4444;
        }
        
        .notification-warning {
            border-left-color: #F59E0B;
        }
        
        .notification-info {
            border-left-color: #5F7BF4;
        }
        
        .notification-content {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            flex: 1;
        }
        
        .notification-close {
            background: none;
            border: none;
            cursor: pointer;
            color: #64748B;
            padding: 0.25rem;
            border-radius: 4px;
            transition: background 0.2s;
        }
        
        .notification-close:hover {
            background: #F1F5F9;
        }
        
        @keyframes slideInRight {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        
        /* Responsive Design */
        @media (max-width: 968px) {
            .form-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            
            .profile-form {
                padding: 1.5rem;
            }
            
            .form-actions {
                flex-direction: column;
            }
            
            .btn-primary, .btn-secondary {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="student-layout">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-building"></i>
                    <span>PlacementPortal</span>
                </div>
            </div>
            
            <nav class="sidebar-nav">
                <a href="/company/dashboard" class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/company/profile" class="nav-item active">
                    <i class="fas fa-building"></i>
                    <span>Company Profile</span>
                </a>
                <a href="/company/post-job" class="nav-item">
                    <i class="fas fa-plus-circle"></i>
                    <span>Post Jobs</span>
                </a>
                <a href="/company/jobs" class="nav-item">
                    <i class="fas fa-briefcase"></i>
                    <span>Manage Jobs</span>
                </a>
                <a href="/company/applicants" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Applicants</span>
                </a>
                <a href="/company/analytics" class="nav-item">
                    <i class="fas fa-chart-line"></i>
                    <span>Analytics</span>
                </a>
                <a href="/auth/logout" class="nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <header class="content-header">
                <div class="header-left">
                    <h1>Company Profile</h1>
                    <p>Manage your company information and branding</p>
                    <% if (isDemo) { %>
                        <div class="demo-banner">
                            <i class="fas fa-info-circle"></i>
                            <span>You are in demo mode. Create an account to save your data.</span>
                        </div>
                    <% } %>
                </div>
                <div class="header-right">
                    <div class="user-info">
                        <div class="user-avatar">
                            <i class="fas fa-building"></i>
                        </div>
                        <span class="user-name"><%= user.name %></span>
                    </div>
                </div>
            </header>

            <div class="dashboard-content">
                <div class="profile-form">
                    <form id="companyProfileForm" enctype="multipart/form-data">
                        <div class="form-grid">
                            <!-- Company Logo Upload Section -->
                            <div class="logo-upload-section">
                                <div class="company-logo-preview" id="logoPreview">
                                    <% if (companyProfile && companyProfile.logo) { %>
                                        <img id="logoImage" src="/uploads/company-logos/<%= companyProfile.logo %>" alt="Company Logo" style="display: block;">
                                        <i class="fas fa-building" style="display: none;"></i>
                                    <% } else { %>
                                        <img id="logoImage" src="" alt="Company Logo" style="display: none;">
                                        <i class="fas fa-building"></i>
                                    <% } %>
                                </div>
                                <input type="file" id="companyLogo" name="companyLogo" accept="image/*" style="display: none;" onchange="handleLogoUpload(this)">
                                <button type="button" class="logo-upload-btn" onclick="document.getElementById('companyLogo').click()">
                                    <i class="fas fa-upload"></i> 
                                    <% if (companyProfile && companyProfile.logo) { %>
                                        Change Logo
                                    <% } else { %>
                                        Upload Company Logo
                                    <% } %>
                                </button>
                                <p style="margin-top: 0.75rem; color: #64748B; font-size: 0.9rem;">
                                    Recommended: 500x500px, PNG or JPG, max 5MB
                                </p>
                            </div>
                            <!-- Basic Information -->
                            <div class="form-group">
                                <label for="companyName">Company Name *</label>
                                <input type="text" id="companyName" name="companyName" 
                                       value="<%= companyProfile.companyName || '' %>" required
                                       placeholder="Enter your company name">
                            </div>

                            <div class="form-group">
                                <label for="industry">Industry *</label>
                                <select id="industry" name="industry" required>
                                    <option value="">Select Industry</option>
                                    <option value="Technology" <%= companyProfile.industry === 'Technology' ? 'selected' : '' %>>Technology</option>
                                    <option value="Finance" <%= companyProfile.industry === 'Finance' ? 'selected' : '' %>>Finance</option>
                                    <option value="Healthcare" <%= companyProfile.industry === 'Healthcare' ? 'selected' : '' %>>Healthcare</option>
                                    <option value="Education" <%= companyProfile.industry === 'Education' ? 'selected' : '' %>>Education</option>
                                    <option value="Retail" <%= companyProfile.industry === 'Retail' ? 'selected' : '' %>>Retail</option>
                                    <option value="Manufacturing" <%= companyProfile.industry === 'Manufacturing' ? 'selected' : '' %>>Manufacturing</option>
                                    <option value="Other" <%= companyProfile.industry === 'Other' ? 'selected' : '' %>>Other</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="website">Website</label>
                                <input type="url" id="website" name="website" 
                                       value="<%= companyProfile.website || '' %>" 
                                       placeholder="https://example.com">
                            </div>

                            <div class="form-group">
                                <label for="size">Company Size</label>
                                <select id="size" name="size">
                                    <option value="">Select Size</option>
                                    <option value="1-10" <%= companyProfile.size === '1-10' ? 'selected' : '' %>>1-10 employees</option>
                                    <option value="11-50" <%= companyProfile.size === '11-50' ? 'selected' : '' %>>11-50 employees</option>
                                    <option value="51-200" <%= companyProfile.size === '51-200' ? 'selected' : '' %>>51-200 employees</option>
                                    <option value="201-500" <%= companyProfile.size === '201-500' ? 'selected' : '' %>>201-500 employees</option>
                                    <option value="501-1000" <%= companyProfile.size === '501-1000' ? 'selected' : '' %>>501-1000 employees</option>
                                    <option value="1000+" <%= companyProfile.size === '1000+' ? 'selected' : '' %>>1000+ employees</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="founded">Year Founded</label>
                                <input type="number" id="founded" name="founded" 
                                       value="<%= companyProfile.founded || '' %>" 
                                       min="1900" max="<%= new Date().getFullYear() %>"
                                       placeholder="2020">
                            </div>

                            <!-- Contact Information -->
                            <div class="form-group full-width">
                                <h3 style="margin-bottom: 1rem; color: var(--text-dark); border-bottom: 2px solid #E2E8F0; padding-bottom: 0.5rem;">Contact Information</h3>
                            </div>

                            <div class="form-group">
                                <label for="contactPerson">Contact Person *</label>
                                <input type="text" id="contactPerson" name="contactPerson" 
                                       value="<%= companyProfile.contactPerson || user.name || '' %>" required
                                       placeholder="Full name of contact person">
                            </div>

                            <div class="form-group">
                                <label for="phone">Phone Number</label>
                                <input type="tel" id="phone" name="phone" 
                                       value="<%= companyProfile.phone || '' %>"
                                       placeholder="+1-555-0123">
                            </div>

                            <div class="form-group">
                                <label for="street">Street Address</label>
                                <input type="text" id="street" name="address.street" 
                                       value="<%= companyProfile.address && companyProfile.address.street || '' %>"
                                       placeholder="123 Main Street">
                            </div>

                            <div class="form-group">
                                <label for="city">City</label>
                                <input type="text" id="city" name="address.city" 
                                       value="<%= companyProfile.address && companyProfile.address.city || '' %>"
                                       placeholder="New York">
                            </div>

                            <div class="form-group">
                                <label for="state">State/Province</label>
                                <input type="text" id="state" name="address.state" 
                                       value="<%= companyProfile.address && companyProfile.address.state || '' %>"
                                       placeholder="NY">
                            </div>

                            <div class="form-group">
                                <label for="country">Country</label>
                                <input type="text" id="country" name="address.country" 
                                       value="<%= companyProfile.address && companyProfile.address.country || '' %>"
                                       placeholder="United States">
                            </div>

                            <div class="form-group">
                                <label for="zipCode">ZIP/Postal Code</label>
                                <input type="text" id="zipCode" name="address.zipCode" 
                                       value="<%= companyProfile.address && companyProfile.address.zipCode || '' %>"
                                       placeholder="10001">
                            </div>

                            <!-- Company Description -->
                            <div class="form-group full-width">
                                <label for="description">Company Description *</label>
                                <textarea id="description" name="description" required 
                                          placeholder="Describe your company culture, mission, values, and what makes you unique..."><%= companyProfile.description || '' %></textarea>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn-secondary" onclick="resetForm()">
                                <i class="fas fa-undo"></i> Reset Changes
                            </button>
                            <button type="submit" class="btn-primary" id="saveButton">
                                <i class="fas fa-save"></i> Save Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>

        <script>
        // Handle form submission
        document.getElementById('companyProfileForm').addEventListener('submit', function(e) {
            e.preventDefault();
            saveCompanyProfile();
        });

        // Handle logo upload preview
        function handleLogoUpload(input) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const logoPreview = document.getElementById('logoPreview');
                    const logoImage = document.getElementById('logoImage');
                    const logoIcon = logoPreview.querySelector('i');
                    
                    // Create image element if it doesn't exist
                    if (!logoImage) {
                        const newImg = document.createElement('img');
                        newImg.id = 'logoImage';
                        newImg.alt = 'Company Logo';
                        logoPreview.appendChild(newImg);
                    }
                    
                    document.getElementById('logoImage').src = e.target.result;
                    document.getElementById('logoImage').style.display = 'block';
                    if (logoIcon) {
                        logoIcon.style.display = 'none';
                    }
                }
                reader.readAsDataURL(file);
            }
        }

        // Save company profile
        async function saveCompanyProfile() {
            const saveButton = document.getElementById('saveButton');
            const originalText = saveButton.innerHTML;
            
            // Show loading state
            saveButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            saveButton.disabled = true;

            try {
                const formData = new FormData(document.getElementById('companyProfileForm'));
                
                // Check if it's demo mode by checking if we're on a demo company page
                const isDemoUser = window.location.pathname.includes('demo') || 
                                  document.querySelector('.demo-banner') !== null;

                if (isDemoUser) {
                    // Demo mode - simulate success
                    setTimeout(() => {
                        showNotification('Demo mode: Profile update simulated (not saved)', 'info');
                        saveButton.innerHTML = originalText;
                        saveButton.disabled = false;
                    }, 1000);
                    return;
                }

                const response = await fetch('/company/update-profile', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('Profile updated successfully!', 'success');
                    // Update company name in session if available
                    if (data.companyName) {
                        document.querySelector('.user-name').textContent = data.companyName;
                    }
                    // Redirect to profile view page after successful save
                    setTimeout(() => {
                        window.location.href = '/company/profile-view';
                    }, 1500);
                } else {
                    showNotification(data.message || 'Failed to update profile', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showNotification('Failed to update profile. Please try again.', 'error');
            } finally {
                saveButton.innerHTML = originalText;
                saveButton.disabled = false;
            }
        }

        // Reset form
        function resetForm() {
            if (confirm('Are you sure you want to reset all changes? This cannot be undone.')) {
                document.getElementById('companyProfileForm').reset();
                // Reset logo preview
                const logoPreview = document.getElementById('logoPreview');
                const logoImage = document.getElementById('logoImage');
                const logoIcon = logoPreview.querySelector('i');
                
                if (logoImage) {
                    logoImage.style.display = 'none';
                }
                if (logoIcon) {
                    logoIcon.style.display = 'block';
                }
                
                showNotification('Form has been reset', 'info');
            }
        }

        // Notification system
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.innerHTML = `
                <div class="notification-content">
                    <i class="fas fa-${getNotificationIcon(type)}"></i>
                    <span>${message}</span>
                </div>
                <button class="notification-close" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            `;

            document.body.appendChild(notification);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 5000);
        }

        function getNotificationIcon(type) {
            const icons = {
                success: 'check-circle',
                error: 'exclamation-circle',
                warning: 'exclamation-triangle',
                info: 'info-circle'
            };
            return icons[type] || 'info-circle';
        }

        // Initialize form with existing data - SIMPLIFIED VERSION
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Company profile page loaded');
            
            // Check if there's an existing logo in the form data
            const logoInput = document.getElementById('companyLogo');
            const logoPreview = document.getElementById('logoPreview');
            const logoImage = document.getElementById('logoImage');
            
            // If logo image exists and has a src, show it
            if (logoImage && logoImage.src && logoImage.src !== '') {
                logoImage.style.display = 'block';
                const logoIcon = logoPreview.querySelector('i');
                if (logoIcon) {
                    logoIcon.style.display = 'none';
                }
            }
        });
    </script>
</body>
</html>