<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="bg-animation">
        <div class="bg-bubble bubble-1"></div>
        <div class="bg-bubble bubble-2"></div>
        <div class="bg-bubble bubble-3"></div>
        <div class="bg-bubble bubble-4"></div>
    </div>

    <header class="auth-header">
        <div class="container">
            <div class="logo">
                <i class="fas fa-graduation-cap"></i>
                <span>PlacementPortal</span>
            </div>
            <nav class="auth-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/auth" class="nav-link">Select Role</a>
                <a href="#" class="nav-link">Contact</a>
            </nav>
        </div>
    </header>

    <main class="auth-main">
        <div class="container">
            <div class="auth-container">
                <div class="auth-welcome">
                    <h1>Join as <%= role.charAt(0).toUpperCase() + role.slice(1) %></h1>
                    <p>Create your <%= role %> account and start your journey with us.</p>
                    <div class="role-indicator">
                        <div class="role-badge role-<%= role %>">
                            <i class="<%= getRoleIcon(role) %>"></i>
                            <span><%= role.charAt(0).toUpperCase() + role.slice(1) %></span>
                        </div>
                    </div>
                    <div class="features">
                        <% if (role === 'student') { %>
                            <div class="feature">
                                <i class="fas fa-briefcase"></i>
                                <span>Find job opportunities</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-file-alt"></i>
                                <span>Build your resume</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-chart-line"></i>
                                <span>Track applications</span>
                            </div>
                        <% } else if (role === 'company') { %>
                            <div class="feature">
                                <i class="fas fa-users"></i>
                                <span>Find talented candidates</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-bullhorn"></i>
                                <span>Post job openings</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-tasks"></i>
                                <span>Manage applications</span>
                            </div>
                        <% } else { %>
                            <div class="feature">
                                <i class="fas fa-user-graduate"></i>
                                <span>Manage students</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-building"></i>
                                <span>Coordinate with companies</span>
                            </div>
                            <div class="feature">
                                <i class="fas fa-chart-bar"></i>
                                <span>Generate reports</span>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="auth-form-container">
                    <div class="form-header">
                        <h2><%= role.charAt(0).toUpperCase() + role.slice(1) %> Sign Up</h2>
                        <p>Create your <%= role %> account</p>
                    </div>

                    <form class="auth-form" id="signupForm">
                        <input type="hidden" name="role" value="<%= role %>">
                        
                        <div class="input-group">
                            <div class="input-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <input type="text" name="name" placeholder="Full Name" required>
                        </div>
                        
                        <div class="input-group">
                            <div class="input-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <input type="email" name="email" placeholder="Email Address" required>
                        </div>

                        <% if (role === 'student') { %>
                            <div class="input-group">
                                <div class="input-icon">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <input type="text" name="college" placeholder="College/University" required>
                            </div>
                            
                            <div class="input-group">
                                <div class="input-icon">
                                    <i class="fas fa-book"></i>
                                </div>
                                <input type="text" name="course" placeholder="Course/Degree" required>
                            </div>
                        <% } else if (role === 'company') { %>
                            <div class="input-group">
                                <div class="input-icon">
                                    <i class="fas fa-building"></i>
                                </div>
                                <input type="text" name="companyName" placeholder="Company Name" required>
                            </div>
                            
                            <div class="input-group">
                                <div class="input-icon">
                                    <i class="fas fa-industry"></i>
                                </div>
                                <input type="text" name="industry" placeholder="Industry" required>
                            </div>
                        <% } else if (role === 'admin') { %>
                            <div class="input-group">
                                <div class="input-icon">
                                    <i class="fas fa-university"></i>
                                </div>
                                <input type="text" name="department" placeholder="Department" required>
                            </div>
                        <% } %>
                        
                        <div class="input-group">
                            <div class="input-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <input type="password" name="password" placeholder="Create Password" required>
                            <button type="button" class="password-toggle">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        
                        <div class="input-group">
                            <div class="input-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
                        </div>
                        
                        <div class="form-options">
                            <label class="checkbox-container">
                                <input type="checkbox" name="agreeTerms" required>
                                <span class="checkmark"></span>
                                I agree to the <a href="#">Terms & Conditions</a> and <a href="#">Privacy Policy</a>
                            </label>
                        </div>
                        
                        <button type="submit" class="btn-primary">Create Account</button>
                        
                        <div class="auth-switch">
                            <p>Already have an account? <a href="/auth/login?role=<%= role %>">Sign in as <%= role %></a></p>
                            <p>Not a <%= role %>? <a href="/auth">Select different role</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <footer class="auth-footer">
        <div class="container">
            <p>&copy; 2023 Placement Portal. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/auth.js"></script>
</body>
</html>